{
  "include": ["types/**/*.d.ts", "**/*.ts", "**/*.tsx", "./**/.server/**/*.ts", "./**/.server/**/*.tsx"],
  "exclude": [
    "node_modules",
    "build",
    "docs",
    "scripts",
    "**/dist/**",
    "**/node_modules/**",
    "extensions/theme-preact-demo/**"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    "types": ["node", "@shopify/app-bridge-types", "vitest/globals"]
  }
}
